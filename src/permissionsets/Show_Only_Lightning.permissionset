<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>This permission set prevents the users from switching to classic when they are in lightning experience</description>
    <label>Lightning: Show Only Lightning</label>
    <license>Salesforce</license>
    <userPermissions>
        <enabled>true</enabled>
        <name>LightningExperienceUser</name>
    </userPermissions>
    <userPermissions>
        <enabled>true</enabled>
        <name>PreventClassicExperience</name>
    </userPermissions>
</PermissionSet>
