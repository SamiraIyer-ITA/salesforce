<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <constants>
        <name>TransactionManagementQueue</name>
        <dataType>String</dataType>
        <value>
            <stringValue>00G35000001AWaA</stringValue>
        </value>
    </constants>
    <description>Close function that updates case owner and status fields.</description>
    <formulas>
        <name>CaseOwner</name>
        <dataType>String</dataType>
        <expression>IF({!UserProfile} = &quot;NIST User&quot;, {!TransactionManagementQueue}, {!$User.Id})</expression>
    </formulas>
    <formulas>
        <name>CaseReason</name>
        <dataType>String</dataType>
        <expression>IF({!UserProfile} = &quot;NIST User&quot;, &quot;From NIST&quot;, &quot;To NIST&quot;)</expression>
    </formulas>
    <formulas>
        <name>CaseStatus</name>
        <dataType>String</dataType>
        <expression>IF({!UserProfile} = &quot;NIST User&quot;, &quot;In Progress&quot;, &quot;Successfully Closed&quot;)</expression>
    </formulas>
    <formulas>
        <name>UserProfile</name>
        <dataType>String</dataType>
        <expression>{!$Profile.Name}</expression>
    </formulas>
    <interviewLabel>Close NIST Case {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Close NIST Case</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Case</name>
        <label>Update Case</label>
        <locationX>216</locationX>
        <locationY>51</locationY>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>recordId</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>OwnerId</field>
            <value>
                <elementReference>CaseOwner</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Reason</field>
            <value>
                <elementReference>CaseReason</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Status</field>
            <value>
                <elementReference>CaseStatus</elementReference>
            </value>
        </inputAssignments>
        <object>Case</object>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>50</locationY>
        <connector>
            <targetReference>Update_Case</targetReference>
        </connector>
    </start>
    <status>Active</status>
    <variables>
        <name>recordId</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
    </variables>
</Flow>
